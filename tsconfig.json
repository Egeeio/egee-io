{
  "compilerOptions": {
      "module": "commonjs",
      "alwaysStrict": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "client/*",
      "server/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}